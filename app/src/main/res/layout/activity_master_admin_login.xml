<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MasterAdminLoginActivity"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:background="@color/whiteTextColor"
        android:orientation="vertical">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/app_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Master Panel"
            android:textColor="@color/navy_blue"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Please Verify, you are Master!"
            android:textColor="@color/md_pink_900"
            android:layout_margin="20dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/Master_confirm_code"
            android:layout_width="match_parent"
            android:layout_margin="40dp"
            android:layout_height="wrap_content"
            android:textColor="@color/md_black_1000"
            android:fontFamily="sans-serif"
            android:textSize="17sp"
            android:hint="Enter you Code..."
            android:layout_gravity="start"
            android:padding="10dp"
            android:focusableInTouchMode="true"
            android:lines="1"
            android:background="@color/md_grey_400" />

        <Button
            android:id="@+id/verify_btn_master_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/whiteAppBgColor"
            android:text="Verify"
            android:textAllCaps="false"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:elevation="2dp"
                app:cardCornerRadius="20dp"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/whiteTextColor"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"

                        android:src="@drawable/app_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="@string/add_new_emp"
                        android:textColor="@color/navy_blue"

                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="45dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <Spinner
                        android:id="@+id/spinner_login"
                        style="@style/modifiedEditText"
                        android:backgroundTint="#072f5f"
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="16dp"
                        android:layout_height="45dp"
                        android:entries="@array/Spinner_emp_type"
                        android:layout_marginTop="24dp"
                        android:spinnerMode="dialog" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/navy_blue"

                        app:startIconDrawable="@drawable/ic_baseline_smartphone_24">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/bulid_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Passcode"
                            android:paddingLeft="10dp"
                            android:inputType="number"
                            tools:ignore="InvalidId" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="15dp"
                        android:textColorHint="@color/navy_blue"
                        app:startIconDrawable="@drawable/email_icon">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/Email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="E-mail"
                            android:inputType="text"
                            android:paddingLeft="10dp"
                            tools:ignore="DuplicateIds" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="15dp"
                        android:textColorHint="@color/navy_blue"
                        app:startIconDrawable="@drawable/profile_icon">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/Ename"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Full Name"
                            android:inputType="text"
                            android:paddingLeft="10dp"
                            tools:ignore="DuplicateIds" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="15dp"
                        android:textColorHint="@color/navy_blue"
                        app:startIconDrawable="@drawable/home_icon">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/cityE"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="City"
                            android:inputType="text"
                            android:paddingLeft="10dp"
                            tools:ignore="DuplicateIds" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="15dp"
                        android:textColorHint="@color/navy_blue"
                        app:startIconDrawable="@drawable/home_icon">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/areaE"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Area"
                            android:inputType="text"
                            android:paddingLeft="10dp"
                            tools:ignore="DuplicateIds" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="15dp"
                        android:textColorHint="@color/navy_blue"
                        app:startIconDrawable="@drawable/phone_icon">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/phoneE"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Mobile number"
                            android:inputType="number"
                            android:paddingLeft="10dp"
                            tools:ignore="DuplicateIds" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="15dp"
                        android:textColorHint="@color/navy_blue"
                        app:passwordToggleEnabled="true"
                        app:startIconDrawable="@drawable/ic_baseline_vpn_key_24">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:paddingLeft="10dp"
                            tools:ignore="DuplicateIds" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <!--<com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="15dp"
                        android:textColorHint="@color/navy_blue"
                        app:passwordToggleEnabled="true"
                        app:startIconDrawable="@drawable/ic_baseline_vpn_key_24">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/confirm_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Confirm Password"
                            android:inputType="textPassword"
                            android:paddingLeft="10dp"
                            tools:ignore="DuplicateIds" />
                    </com.google.android.material.textfield.TextInputLayout>-->


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">


                        <CheckBox
                            android:id="@+id/checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginTop="5dp"
                            android:text="@string/i_accept" />
                        <!--
                                            <TextView
                                                android:id="@+id/terms"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/terms"
                                                android:textStyle="bold"
                                                android:textColor="@color/royal_blue"
                                                android:layout_marginTop="14dp"
                                                android:layout_marginLeft="3dp"/>
                                                -->
                    </LinearLayout>

                    <Button
                        android:id="@+id/add_emp"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="40dp"
                        android:background="@drawable/gradiant_button"
                        android:text="Add"
                        android:textColor="@color/whiteTextColor"
                        android:textSize="20dp" />

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>


        </RelativeLayout>

    </ScrollView>



</LinearLayout>
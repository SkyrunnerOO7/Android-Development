<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:strokeWidth="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="20dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:background="@color/whiteTextColor"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:src="@drawable/app_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Add New Data"
                    android:textColor="@color/navy_blue"

                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_gravity="center">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_marginHorizontal="16dp"
                    app:startIconDrawable="@drawable/profile_icon"
                    android:textColorHint="@color/navy_blue"
                    android:layout_marginTop="15dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/fullName"
                        android:id="@+id/full_name"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        tools:ignore="InvalidId" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:ccp_hideNameCode='true'
                    android:layout_marginHorizontal="16dp"
                    android:padding="10dp"
                    android:gravity="center"
                    app:ccp_showFullName="true"
                    android:background="@drawable/country_picker_bg"
                    app:ccp_defaultNameCode="in"

                    android:layout_marginTop="15dp"/>



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/navy_blue"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_marginHorizontal="16dp"
                    app:startIconDrawable="@drawable/ic_baseline_smartphone_24"
                    android:layout_marginTop="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/phoneNumber"
                        android:id="@+id/phone_number"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        tools:ignore="DuplicateIds" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_marginHorizontal="16dp"
                    app:startIconDrawable="@drawable/city_icon"
                    android:textColorHint="@color/navy_blue"
                    android:layout_marginTop="15dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="City"
                        android:id="@+id/city"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        tools:ignore="InvalidId" />
                </com.google.android.material.textfield.TextInputLayout>







                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">


                    <CheckBox
                        android:id="@+id/checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/i_accept"
                        android:layout_gravity="start"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>

                <Button
                    android:id="@+id/add_data"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradiant_button"
                    android:text="Add"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/whiteTextColor"
                    android:textSize="20dp"
                    android:layout_marginBottom="20dp"/>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>




    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:elevation="10dp"
        android:gravity="center"
        app:cardBackgroundColor="@color/whiteCardColor"
        app:cardCornerRadius="16dp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="15dp"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:id="@+id/cus_name"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="15sp"
                android:layout_marginLeft="2dp"
                android:textStyle="bold"
                />



            <TextView
                android:id="@+id/cus_phone"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Phone "
                android:textSize="15sp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"

                android:layout_below="@id/cus_name"
                android:textStyle="bold"
                />



            <TextView
                android:id="@+id/cus_city"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="City "

                android:textSize="15sp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"

                android:layout_below="@id/cus_phone"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/cus_status"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Status"

                android:textSize="15sp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"

                android:layout_below="@id/cus_city"
                android:textStyle="bold"
                />



            <TextView
                android:id="@+id/cus_pro"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Problem "

                android:textSize="15sp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"

                android:layout_below="@id/cus_status"
                android:textStyle="bold"
                tools:ignore="DuplicateIds" />

            <TextView
                android:id="@+id/cus_remark"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Remark "

                android:textSize="15sp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"

                android:layout_below="@id/cus_pro"
                android:textStyle="bold"
                />





        </RelativeLayout>






    </androidx.cardview.widget.CardView>


</RelativeLayout>
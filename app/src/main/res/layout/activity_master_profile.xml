<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MasterProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/profile_icon"
        app:civ_border_color="@color/navy_blue"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:textAlignment="center"
        android:text="Save Image"
        android:textColor="@color/blackTextColor"
        android:layout_below="@id/profile_image"
        android:gravity="center_horizontal" />


    <TextView
        android:id="@+id/sample_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email  "
        android:layout_below="@id/profile_image"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="80dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/navy_blue"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="abcd@gmail.com"
        android:layout_marginTop="80dp"
        android:layout_alignLeft="@+id/sample_email"
        android:layout_below="@+id/profile_image"
        android:layout_marginLeft="95dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/blackTextColor"

        android:textSize="20dp"/>
    <TextView
        android:id="@+id/sample_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code   "
        android:layout_below="@id/profile_image"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="115dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/navy_blue"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="code1234"
        android:layout_marginTop="115dp"
        android:layout_alignLeft="@+id/sample_email"
        android:layout_below="@+id/profile_image"
        android:layout_marginLeft="95dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/blackTextColor"

        android:textSize="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:fitsSystemWindows="true"
        android:layout_marginTop="100dp"
        android:layout_below="@id/email"
        android:gravity="center"

        android:weightSum="2">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/logout_button"
                android:layout_width="140dp"
                android:layout_height="55dp"
                android:textSize="15dp"
                android:textColor="@color/whiteTextColor"
                android:text="Logout"
                tools:ignore="InvalidId" />

        </LinearLayout>




    </LinearLayout>


</RelativeLayout>
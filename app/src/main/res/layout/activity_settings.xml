<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings_Activity">






    <ImageView
        android:id="@+id/settings_profile_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/change_profile_image"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        />



    <TextView
        android:id="@+id/settings_passcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_profile_image"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:text="Passcode"
        android:textColor="@color/blackTextColor"
        />

    <TextView
        android:id="@+id/settings_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_passcode"

        android:layout_margin="15dp"
        android:padding="10dp"
        android:text="Name"
        android:textColor="@color/blackTextColor"
        />

    <TextView
        android:id="@+id/settings_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_full_name"
        android:text="Email"
        android:textColor="@color/blackTextColor"
        android:layout_margin="15dp"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/save_btn"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_Email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="save"
        android:textColor="@color/primaryTextColor"
        android:textSize="20sp"
        />

</RelativeLayout>